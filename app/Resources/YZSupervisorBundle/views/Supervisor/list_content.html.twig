<div class="page-header">
    <h1>Supervisor</h1>
</div>
<div class="row">
    <div class="col-lg-12">
        <ul class="nav nav-tabs">
            {% for supervisor in supervisors %}
                <li class="{{ loop.index == 1 ? 'active' : '' }}">
                    <a href="#{{ supervisor.name }}">
                        <span class="label label-{% if supervisor.checkConnection == true %}success{% else %}important{% endif %}">{% if supervisor.checkConnection == true %}UP{% else %}DOWN{% endif %}</span>
                        {% if supervisor.checkConnection == true %}{{ supervisor.getIdentification }}{% else %}{{ supervisor.name }}{% endif %}
                    </a>
                </li>
            {% endfor %}
        </ul>
        <div class="tab-content">
            {% for supervisor in supervisors %}
                <div class="tab-pane{{ loop.index == 1 ? ' active' : '' }}" id="{{ supervisor.name }}">
                {% if supervisor.checkConnection == true %}
                    <table class="table table-striped table-hover table-align-middle">
                        <thead>
                            <tr>
                                <th>Status</th>
                                <th>Process</th>
                                <th class="align-right">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for process in supervisor.processes %}
                            {% set processInfos = process.processInfo %}
                            <tr class="{% if processInfos.state == 10 or  processInfos.state == 20 %}success{% else %}error{% endif %}">
                                <td class="col-lg-2">
                                    <span class="label label-{% if processInfos.state == 10 or processInfos.state == 20 %}success{% else %}important{% endif %}">{{ processInfos.statename }}</span>
                                </td>
                                <td class="col-lg-6">
                                    <strong>{{ processInfos.name }}</strong><br />
                                    {{ processInfos.description }}
                                </td>
                                <td class="col-lg-4 align-right">
                                    <div class="btn-group">
                                        {% if processInfos.state == 10 or  processInfos.state == 20 %}
                                            <a href="{{ path('supervisor.process.startStop', { 'key':supervisor.key, 'name':process.name, 'group':process.group, 'start': 0 }) }}" class="btn btn-danger btn-small">Stop</a>
                                        {% else %}
                                            <a href="{{ path('supervisor.process.startStop', { 'key':supervisor.key, 'name':process.name, 'group':process.group, 'start': 1 }) }}" class="btn btn-success btn-small">Start</a>
                                        {% endif %}
                                    </div>

                                    <div class="btn-group">
                                        <a href="{{ path('supervisor.process.info', { 'key':supervisor.key, 'name':process.name, 'group':process.group }) }}" class="fancybox_preview fancybox.iframe btn btn-default btn-small">{{ "Information"|trans }}</a>
                                        <button data-toggle="dropdown" class="btn btn-default btn-small dropdown-toggle"><span class="caret"></span></button>
                                        <ul class="dropdown-menu align-left">
                                            <li><a href="{{ path('supervisor.process.log', { 'key':supervisor.key, 'name':process.name, 'group':process.group }) }}" class="fancybox_preview fancybox.iframe">{{ "Read stdout"|trans }}</a></li>
                                            <li><a href="{{ path('supervisor.process.error', { 'key':supervisor.key, 'name':process.name, 'group':process.group }) }}" class="fancybox_preview fancybox.iframe">{{ "Read stderr"|trans }}</a></li>
                                            <li class="divider"></li>
                                            <li><a href="{{ path('supervisor.process.log.clear', { 'key': supervisor.key, 'name': process.name, 'group': process.group }) }}">{{ "Clear log"|trans }}</a></li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                        <tfoot>
                            <tr>
                                <th colspan="2">
                                    <p>Version <code>{{ supervisor.getSupervisorVersion }}</code></p>
                                    <p>Api <code>{{ supervisor.getAPIVersion }}</code></p>
                                </th>
                                <th class="align-right">
                                    {#<div class="btn-group mr10">
                                        <a href="{{ path('yz_supervisor_start_stop_all_processes', { 'key':supervisor.key, 'start': 1 }) }}" class="btn btn-mini btn-success">{{ "Lancer tous les processus"|trans }}</a>
                                        <a href="{{ path('yz_supervisor_start_stop_all_processes', { 'key':supervisor.key, 'start': 0 }) }}" class="btn btn-mini btn-danger">{{ "Arreter tous les processus"|trans }}</a>
                                    </div>#}
                                    <div class="btn-group">
                                        <a href="{{ path('supervisor.log', { 'key':supervisor.key }) }}" class="fancybox_preview fancybox.iframe btn-small btn btn-default">{{ "Read supervisor log"|trans }}</a>
                                        <a href="{{ path('supervisor.log.clear', { 'key':supervisor.key }) }}" class="btn-small btn-default btn">{{ "Clear supervisor log"|trans }}</a>
                                    </div>
                                </th>
                            </tr>
                        </tfoot>
                    </table>
                {% endif %}
                </div>
            {% endfor %}
        </div>
    </div>
</div>
