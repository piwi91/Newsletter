{% from '::flash.html.twig' import session_flash %}

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:fb="http://www.facebook.com/2008/fbml" xml:lang="en" lang="en">
<head>
    <title>Piwi-Web Beheerpaneel - Login</title>

    {% block stylesheets %}
        <link type="text/css" href="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/themes/smoothness/jquery-ui.min.css" rel="stylesheet" />
        {% stylesheets
        output="css/style.css"
        filter="less,cssrewrite"
        'http://fonts.googleapis.com/css?family=Lato:100,300,400,700'
        '../app/Resources/public/less/style.less'

        '../app/Resources/public/css/se7en/font-awesome.css'
        '../app/Resources/public/css/se7en/se7en-font.css'
        '../app/Resources/public/css/se7en/application.css'
        %}
        <link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="screen" />
        {% endstylesheets %}
    {% endblock %}
</head>

<body class="login">
<!-- Login Screen -->
<div class="login-container">
    {% block flashes %}
        {% if app.session.flashbag.peekAll|length > 0 %}
            <div class="row">
                <div id="flash" class="col-lg-12">
                    {{ session_flash() }}
                </div>
            </div>
        {% endif %}
    {% endblock flashes %}
    <img width="100" height="30" src="../../../../../images/logo-login@2x.png" />
    {% block body %}{% endblock %}
</div>
<!-- End Login Screen -->
{% block javascripts %}
    {% javascripts '@application_js' combine=true %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
</body>
</html>