{% extends "PiwicmsAdminNewsletterBundle::layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .previewModal .modal-dialog {
            /* new custom width */
            width: 700px;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts
    '../src/Piwicms/Admin/NewsletterBundle/Resources/public/js/MailingListUser/index.js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script>
        $(document).ready(function(){
            $(document).mailingListIndex({
                id: '{{ id }}',
                dataTable: $('#table'),
                dataTableContainer: $('#tableContainer'),
                // Routing
                ajaxDatatableRoute: 'piwicms_admin_mailinglist_users_indexDatatable',
                editMailingListUserRoute: 'piwicms_admin_mailinglist_users_edit',
                deleteMailingListUserRoute: 'piwicms_admin_mailinglist_users_delete',
                showMailingListUserRoute: 'piwicms_admin_mailinglist_users_show',
                // Translations
                editTrans: '{{ 'edit'|trans }}'
            });
        });
    </script>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="widget-container">
                <div class="heading">
                    <i class="icon-list"></i>{{ 'newsletterbundle.mailinglistuser.index.title'|trans }}
                </div>
                <div class="widget-content padded clearfix">
                    <dl>
                        <dt>{{ 'newsletterbundle.mailinglist.show.subscribelink'|trans }}</dt>
                        <dd><a href="{{ subscribeUrl }}" target="_blank">{{ subscribeUrl }}</a></dd>
                        <dt>{{ 'newsletterbundle.mailinglist.show.unsubscribelink'|trans }}</dt>
                        <dd><a href="{{ unsubscribeUrl }}" target="_blank">{{ unsubscribeUrl }}</a></dd>
                    </dl>
                    <table class="table table-bordered table-striped" id="table">
                        <thead>
                        <tr>
                            <th>{{ 'newsletterbundle.mailinglistuser.index.table.firstname'|trans }}</th>
                            <th>{{ 'newsletterbundle.mailinglistuser.index.table.surname'|trans }}</th>
                            <th>{{ 'newsletterbundle.mailinglistuser.index.table.emailaddress'|trans }}</th>
                            <th>&nbsp;</th>
                        </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
                <div class="widget-content padded clearfix">
                    <p><a href="{{ path('piwicms_admin_mailinglist_users_new', {id: id}) }}" class="btn btn-default newMailingListUser">{{ 'new'|trans }}</a></p>
                </div>
            </div>
        </div>
    </div>
{% endblock body %}