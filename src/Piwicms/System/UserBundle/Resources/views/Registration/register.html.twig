{% extends "PiwicmsSystemUserBundle::layout.html.twig" %}

{% block fos_user_content %}
    <div class="row">
        <div class="span6 offset3">
            <div class="content">
                <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="form-horizontal fos_user_registration_register">
                    <div class="control-group">
                        <div class="controls">
                            <h1>Register</h1>
                        </div>
                    </div>
                    {{ form_widget(form) }}
                    <div class="control-group">
                        <div class="controls">
                            <input class="btn" type="submit" value="{{ 'registration.submit'|trans }}" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock fos_user_content %}
