{% extends "PiwicmsSystemUserBundle::layout.html.twig" %}


{% block javascripts %}
    {{ parent() }}
    {% javascripts
    '../src/Piwicms/System/UserBundle/Resources/public/js/userList.js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script>
        $(document).ready(function(){
            $(document).userList({
                dataTable: $('#table'),
                dataTableContainer: $('#tableContainer'),
                // Routing
                ajaxDatatableRoute: 'piwicms_admin_user_indexDatatable',
                showUserRoute: 'piwicms_admin_user_show',
                editUserRoute: 'piwicms_admin_user_edit',
                deleteUserRoute: 'piwicms_admin_user_delete',
                resetPasswordRoute: 'piwicms_admin_user_reset',
                // Translations
                editTrans: 'Edit'
            });
        });
    </script>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="widget-container">
                <div class="heading">
                    <i class="icon-list"></i>{{ 'userbundle.user.index.title'|trans }}
                </div>
                <div class="widget-content padded clearfix">
                    <table class="table table-bordered table-striped" id="table">
                        <thead>
                        <tr>
                            <th>id</th>
                            <th>{{ 'userbundle.user.index.username'|trans }}</th>
                            <th>{{ 'userbundle.user.index.name'|trans }}</th>
                            <th>{{ 'userbundle.user.index.emailaddress'|trans }}</th>
                            <th>&nbsp;</th>
                        </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
                <div class="widget-content padded clearfix">
                    <p><a href="{{ path('piwicms_admin_user_new') }}" class="btn btn-primary">{{ 'new'|trans }}</a></p>
                </div>
            </div>
        </div>
    </div>
{% endblock body %}